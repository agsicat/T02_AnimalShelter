<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cpsc481.t02.animalshelter.StartActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/welcomeImg"
        android:textSize="17dp"
        android:paddingLeft="5dp"
        android:text="@string/welcome"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeMsg"
        android:layout_alignStart="@+id/welcome"
        android:layout_below="@+id/welcome"
        android:textSize="14dp"
        android:padding="5dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/welcomeImg"
        android:src="@mipmap/ic_launcher"
        android:layout_alignLeft="@+id/newButton"
        android:alpha=".75"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:text="@string/new_name"
        android:id="@+id/newButton"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="154dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/colorPrimaryLite"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:text="@string/existing_name"
        android:id="@+id/existing"
        android:layout_toRightOf="@+id/newButton"
        android:layout_alignTop="@+id/newButton"
        android:backgroundTint="@color/colorPrimaryLite"/>
</RelativeLayout>
