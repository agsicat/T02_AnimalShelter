<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cpsc481.t02.animalshelter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExistingList"
            android:parentActivityName=".StartActivity"/>
        <activity
            android:name=".NewAnimalForm"
            android:label="@string/title_activity_new_animal_form"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".StartActivity"/>
        <activity
            android:name=".SingleAnimalView"
            android:label="@string/title_activity_single_animal_view"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".NewAnimalForm"/>

        <uses-feature
            android:name="android.hardware.camera2"
            android:required="true"/>
    </application>
</manifest>